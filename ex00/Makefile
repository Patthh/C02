#==============================================================================#
## PHONEBOOK MAKEFILE üìû 
#==============================================================================#

## VARIABLES üß©
CXX                     =       c++
CXXFLAGS                =       -Wall -Wextra -Werror -std=c++98
NAME                    =       fixed

#==============================================================================#
## FILES üìÑ
SRC_FILES               =       main.cpp  Fixed.cpp
HDR_FILES               =       Fixed.hpp
OBJ_FILES               =       $(SRC_FILES:.cpp=.o)

#==============================================================================#
## PROGRESS TRACKING ‚è±Ô∏è
TOTAL_FILES             =       $(words $(SRC_FILES))
COMPILED_FILES          =       0
DOTS                    =       $(shell printf ".%.0s" $(shell seq $(TOTAL_FILES)))

#==============================================================================#
## COLORS üé®
GREEN                   =       \033[0;32m
CYAN                    =       \033[0;36m
YELLOW                  =       \033[0;33m
RED                     =       \033[0;31m
PURPLE                  =       \033[0;35m
NC                      =       \033[0m

#==============================================================================#
## RULES üî®
all:                            $(NAME)
				@printf "$(GREEN)üéâ $(NAME) has been successfully compiled! üéâ$(NC)\n"

$(NAME):                        $(OBJ_FILES)
				@printf "$(YELLOW)üîó Linking objects into executable...$(NC)\n"
				@$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ_FILES)
				@printf "$(GREEN)‚úÖ Executable $(NAME) created! $(NC)\n"

%.o: %.cpp
				@$(eval COMPILED_FILES=$(shell echo $$(($(COMPILED_FILES) + 1))))
				@printf "\r$(CYAN)üîÑ Compiling: $< $(COMPILED_FILES)/$(TOTAL_FILES)$(NC) üü°"
				@$(CXX) $(CXXFLAGS) -c $< -o $@
				@if [ $(COMPILED_FILES) -eq $(TOTAL_FILES) ]; then echo; fi

clean:
				@printf "$(YELLOW)üßπ Cleaning object files...$(NC)\n"
				@rm -f $(OBJ_FILES)
				@printf "$(GREEN)‚ú® Object files cleaned!$(NC)\n"

fclean:                         clean
				@printf "$(YELLOW)üóëÔ∏è  Cleaning $(NAME) executable...$(NC)\n"
				@rm -f $(NAME)
				@printf "$(GREEN)üßº All cleaned up!$(NC)\n"

re:                             fclean all
				@printf "$(PURPLE)üîÑ Project rebuilt from scratch! üîÑ$(NC)\n"

#==============================================================================#
.PHONY:                         all clean fclean re help

help:
				@printf "$(CYAN)üìö Available targets:$(NC)\n"
				@printf "$(GREEN)  make$(NC)        - Build the phonebook program\n"
				@printf "$(GREEN)  make clean$(NC)  - Remove object files\n"
				@printf "$(GREEN)  make fclean$(NC) - Remove object files and executable\n"
				@printf "$(GREEN)  make re$(NC)     - Rebuild from scratch\n"
				@printf "$(GREEN)  make help$(NC)   - Display this help message\n"
